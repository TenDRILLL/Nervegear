{
  "name": "nervegear",
  "productName": "Nervegear",
  "version": "2.2.9d",
  "description": "Small Discord RPC application which parodies Sword Art Online.",
  "main": "src/main.js",
  "scripts": {
    "build": "rimraf ./build && tsc --build && copyfiles -u 1 src/html/* src/images/* src/other/* build",
    "buildrun": "npm run build && electron .",
    "run": "electron .",
    "dist": "electron-builder"
  },
  "author": "Ten#0010",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^18.8.5",
    "copyfiles": "^2.4.1",
    "discord-rpc": "^3.2.0",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  },
  "repository": "github:TenDRILLL/Nervegear",
  "build": {
    "appId": "xyz.tentti.nervegear",
    "win": {
      "target": "portable",
      "icon": "nvg.ico"
    },
    "portable": {
      "unicode": false,
      "artifactName": "Nervegear.exe"
    }
  }
}
