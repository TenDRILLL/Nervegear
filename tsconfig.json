{
  "compilerOptions": {
    "watch": true,
    "outDir": "./build",
    "target": "esnext",
    "lib": ["ES5","dom"],
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
